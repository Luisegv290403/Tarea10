<div class="container mt-5">
  <%= form_with(model: articulo, local: true) do |form| %>
    <% if articulo.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(articulo.errors.count, "error") %> prohibited this articulo from being saved:</h4>
        <ul>
          <% articulo.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :titulo, class: "control-label" %>
      <%= form.text_field :titulo, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :contenido, class: "control-label" %>
      <%= form.text_area :contenido, class: "form-control", rows: 4 %>
    </div>

    <div class="form-group">
      <%= form.label :usuario_id, class: "control-label" %>
      <%= form.text_field :usuario_id, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit "Guardar", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
